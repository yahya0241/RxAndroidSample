<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/buffer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buffer" />

    <TextView
        android:id="@+id/buffer_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:justificationMode="inter_word"
        android:padding="10dp" />

    <TextView
        android:id="@+id/buffer_textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2.5dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/throttle_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/throttle" />

    <TextView
        android:id="@+id/throttle_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:justificationMode="inter_word"
        android:padding="10dp" />

    <TextView
        android:id="@+id/throttle_textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2.5dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:scrollbars="vertical" />
</LinearLayout>
